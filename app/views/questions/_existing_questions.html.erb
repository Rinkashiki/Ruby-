<%= stylesheet_link_tag 'users' %>
    <br>
    <div class="form-group">
        <% flash.each do |type, msg| %>
          <div class="alert alert-danger alert-dismissible d-inline-block" role="alert">
            <%= msg %>
          </div> 
        <% end %>
        <% flash.delete(:alert) %>
        <h2>Preguntas Existentes</h2><br>
        <% if !@activity.nil? %>
          <%= hidden_field_tag(:activity, @activity.id) %>
        <% end %>
        <% if !@clip.nil? %>
          <%= hidden_field_tag(:clip, @clip) %>
        <% end %>
        <%= hidden_field_tag(:type, @type) %>
        <% @questions.each do |q| %>
            <div class="center topic-form bg-secondary rounded">
              <p>Pregunta: <%= q.question %></p>
              <p>Tipo de pregunta: <%= q.question_type %></p>
              <% if !@activity.nil? %>
                <p><%= link_to 'AÃ±adir Pregunta', add_activity_question_path(q, activity: @activity), class: 'btn btn-primary' %></p>
              <% else %>
                <p><%= link_to 'AÃ±adir Pregunta', add_clip_question_path(q, clip: @clip), class: 'btn btn-primary' %></p>
              <% end %>
            </div>
          <% end %>
    </div>