<%= stylesheet_link_tag 'users' %>
  <div class="container form_padding">
    <br>
    <div class="form-group">
      <%= form_for @activity do |a| %>
        <% flash.each do |type, msg| %>
          <div class="alert alert-danger alert-dismissible d-inline-block" role="alert">
            <%= msg %>
          </div> 
        <% end %>
        <% flash.delete(:alert) %>
        <h1>Nueva Actividad</h1>
        <p>
          <%= a.label :name %><br>
          <%= a.text_field :name, class: "textBox" %>
        </p>
        <p>
          <%= a.label :initial_date %><br>
          <%= a.date_field :initial_date, :value => Time.now.strftime("%Y-%m-%d"), class: "textBox" %>
        </p>
        <p>
          <%= a.label :final_date %><br>
          <%= a.date_field :final_date, :value => Time.now.strftime("%Y-%m-%d"), class: "textBox" %>
        </p>
        <p>
          <%= a.label :result_date %><br>
          <%= a.date_field :result_date, :value => Time.now.strftime("%Y-%m-%d"), class: "textBox" %>
        </p>
        <p>
          <%= a.label :grade %><br>
          <%= a.number_field :grade, step: :any, class: "textBox" %>
        </p>
        <p>
          <%= a.submit 'Crear', class: 'btn btn-primary' %>
        </p>
      <% end %>
    </div>
  </div>
